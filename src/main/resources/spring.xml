<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.rnd.golovach.Client">
        <constructor-arg type="java.lang.String" value="1"/>
        <constructor-arg type="java.lang.String" value="Chris"/>
    </bean>

    <bean id="consoleEventLogger" class="com.rnd.golovach.ConsoleEventLogger"/>

    <bean id="app" class="com.rnd.golovach.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="com.rnd.golovach.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.rnd.golovach.FileEventLogger" init-method="init">
        <constructor-arg value="fileLog.txt"/>
    </bean>

    <bean id="cacheFileEventLogger"  class="com.rnd.golovach.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="2"/>
        <constructor-arg value="fileLog.txt"/>
    </bean>




</beans>
